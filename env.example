# Application Settings
APP_NAME="MLX LLM API"
APP_VERSION="0.1.0"
DEBUG=false
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Security Settings (comma-separated lists)
ALLOWED_HOSTS=*
CORS_ORIGINS=*

# MLX Model Settings
# Set to the parent directory containing your model folders
# Example: if you have /Users/username/models/lmstudio-community/ and /Users/username/models/mlx-community/
# then set LLM_MODEL_DIRECTORY=/Users/username/models
LLM_MODEL_DIRECTORY=/path/to/your/models
# Optional: specify default model (use the full path from discovery, e.g., "lmstudio-community/Qwen3-8B-MLX-8bit")
LLM_MODEL_NAME=
LLM_MODEL_MAX_TOKENS=1000
LLM_MODEL_TEMPERATURE=0.7

# Logging
LOG_LEVEL=INFO
